<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/font_bold"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/victimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@mipmap/ic_victim"
        android:drawablePadding="25dp"
        android:fontFamily="@font/font_bold"
        android:paddingStart="20dp"
        android:text="Victim"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="@color/colorFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.20" />

    <Button
        android:id="@+id/friendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@mipmap/ic_friends"
        android:drawablePadding="25dp"
        android:fontFamily="@font/font_bold"
        android:paddingStart="20dp"
        android:textColor="@color/colorFont"
        android:text="Friends \u0026 Family"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/victimButton"
        app:layout_constraintStart_toStartOf="@+id/victimButton"
        app:layout_constraintTop_toBottomOf="@+id/victimButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/helperButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@mipmap/ic_victim"
        android:drawablePadding="25dp"
        android:fontFamily="@font/font_bold"
        android:paddingStart="20dp"
        android:text="Helper"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="@color/colorFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/victimButton"
        app:layout_constraintStart_toStartOf="@+id/victimButton"
        app:layout_constraintTop_toBottomOf="@+id/friendsButton"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>